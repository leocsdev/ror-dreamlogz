<%= turbo_frame_tag dream do %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= link_to dream.title, dream, data: { turbo_frame: "_top" } %>

    <div class="actions d-flex gap-2 justify-content-between align-items-center">
      <div>
        <%= button_to "Delete",
                        dream,
                        method: :delete,
                        data: { turbo_confirm: "Are you sure?" },
                        class: "btn btn-danger btn-sm" %>
      </div>

      <div>
        <%= link_to "Edit",
                    edit_dream_path(dream),
                    class: "btn btn-success btn-sm" %>
      </div>
    </div>
  </li>
<% end %>

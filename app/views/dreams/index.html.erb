<section class="container">
  <% if @dreams.present? %>
    <h1 class="mb-5">Your dreams today</h1>
    <ul class="list-group mb-5">
      <% @dreams.each do |d| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to d do %>
            <%= d.title %>
          <% end %>

          <div class="actions d-flex gap-4 justify-content-between align-items-center">
            <div>
              Delete
            </div>

            <div>
              <%= link_to "Edit", edit_dream_path(d) %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h1 class="text-gray mb-5">No dreams logged for today</h1>
  <% end %>

  <%= link_to "Log Dream", new_dream_path, class: "btn btn-primary" %>
</section>

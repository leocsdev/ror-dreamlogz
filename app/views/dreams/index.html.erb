<section class="container">
  <% if @dates.present? %>
    <div class="text-center">
      <h3><%= @current_date.strftime("%B").upcase %></h3>
      <ul class="d-flex gap-4 flex-wrap justify-content-center">
        <% @dates.each do |date| %>
          <li class="btn btn-<%= @current_date == date ? "success" : "secondary" %>"><%= date.strftime("%d") %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="mb-5" id="heading"><%= Dream.today.empty? ? "No dreams logged for today" : "Your dreams today" %></h1>

  <ul class="list-group mb-5">
    <%= turbo_frame_tag "dreams" do %>
      <%= render @dreams %>
    <% end %>
  </ul>

  <%= link_to "Log Dream",
              new_dream_path,
              data: { turbo_frame: dom_id(Dream.new) },
              class: "btn btn-primary" %>

  <%= turbo_frame_tag Dream.new %>
</section>

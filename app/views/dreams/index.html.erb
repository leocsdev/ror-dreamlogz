<section class="container">
  <% if @days.present? %>
    <ul class="d-flex gap-4 flex-wrap">
      <% @days.each do |day| %>
        <li class="btn btn-<%= @current_day == day ? "success" : "secondary" %>"><%= day %></li>
      <% end %>
    </ul>
  <% end %>

  <h1 class="mb-5" id="heading"><%= Dream.today.empty? ? "No dreams logged for today" : "Your dreams today" %></h1>

  <ul class="list-group mb-5">
    <%= turbo_frame_tag "dreams" do %>
      <%= render @dreams %>
    <% end %>
  </ul>

  <%= link_to "Log Dream",
              new_dream_path,
              data: { turbo_frame: dom_id(Dream.new) },
              class: "btn btn-primary" %>

  <%= turbo_frame_tag Dream.new %>
</section>
